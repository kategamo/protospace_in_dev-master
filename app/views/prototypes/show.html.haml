.container.proto-page
  %header.row.user-nav
    .col-md-6
      .media
        .media-left
          = link_to user_path(@prototype.user) do
            = image_tag(@prototype.user.avatar.thumb, alt: "profile_photo", class: "media-object", style: "width: 64px; height: 64px;")
        .media-body
          %h4#top-aligned-media.media-heading
            = @prototype.title
          .proto-user
            by
            = link_to "#{@prototype.user.name}", user_path(@prototype.user)
            .degree
              = @prototype.user.position
    .col-md-3
      - if user_signed_in? && current_user.id == @prototype.user.id
        %ui
          = link_to '編集',"/prototypes/#{@prototype.id}/edit",method: :get, class: "btn btn-default"
        %ui
          = link_to '削除',"/prototypes/#{@prototype.id}",method: :delete, class: "btn btn-default"
  .row
    .col-md-9.image-box
      = image_tag(@prototype.set_main_thumbnail.large, class: 'img-responsive img-size-fix', style: "margin: 0 auto;")
    .col-md-3
      %ul.proto-sub-list.list-group
        - @prototype.captured_images.sub.each do |image|
          %li.list-group-item
            = image_tag(image.content, class: 'img-responsive')
  .row.proto-description
    .col-md-3
      %h4 Catch Copy
      %p
        = @prototype.catch_copy
    .col-md-6
      %h4 Concept
      %p
        = @prototype.concept
    .col-md-3
      %h4 Tag List
      %ul.proto-tag-list.list-inline
        - @tags.each do |tag|
          %li
            %a{href: "/tags/#{tag.id}", class: "btn btn-default"} #{tag.name}
  .container
    = form_tag("/prototypes/#{@prototype.id}/comments", method: :post) do
      %textarea{cols:"60", name: "content", placeholder:"コメントする", rows: "2" ,class: "commentform"}
      %input{type: "submit", value: "SENT",class: "btn btn-default commentform__sentbtn"}
  .col-md-3
    %h4
      コメント一覧
      %Comments
        - if @comments
          - @comments.each do |comment|
            %p
            %strong= link_to comment.user.name, "/users/#{comment.user_id}"
            = comment.content
            - if user_signed_in? && current_user.id == comment.user.id
              = link_to '編集',"/prototypes/#{@prototype.id}/comments/#{comment.id}/edit",method: :get
              = link_to '削除',"/prototypes/#{@prototype.id}/comments/#{comment.id}",method: :delete
