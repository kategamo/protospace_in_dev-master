.jumbotron
  .container.text-center
    = image_tag("header_logo.png", alt: "PROTO TYPE - SHARE THE PROTOTYPE", height: "73px")

.filter-nav
  .container
    .row
      %ul.nav.nav-pills.col-lg-11
        %li.btn-default.btn-popular
          = link_to "Popular", "#"
        %li.btn-default.btn-popular
          = link_to "Newest", "#"
      = link_to "VIEW TAGS", "/tags", class: "btn btn-default col-lg-1"

.tag-show
  .tag-show__tagbox
    .tag-show__tagbox__tagname
      =link_to @tag.name, "/tags/#{@tag.id}"
    .tag-show__tagbox__prototypecounter
      = tagcount = Tag.where(name: @tag.name).count
      Prototypes

.container.proto-list
  .row
    = render partial: 'prototypes/prototype', collection: @prototypes
